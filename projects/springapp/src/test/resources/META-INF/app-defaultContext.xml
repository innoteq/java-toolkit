<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       ">
    <bean id="appBean" class="java.lang.String">
        <constructor-arg value="appBean"/>
    </bean>

    <bean id="beanWithId" class="java.lang.String">
        <constructor-arg value="beanWithId"/>
    </bean>

    <bean id="beanWithIdAndName" name="beanWithIdAndName" class="java.lang.String">
        <constructor-arg value="beanWithIdAndName"/>
    </bean>

    <bean name="beanWithoutId" class="java.lang.String">
        <constructor-arg value="beanWithoutId"/>
    </bean>

    <bean id="beanId" name="beanName" class="java.lang.String">
        <constructor-arg value="mixedBean"/>
    </bean>
</beans>
